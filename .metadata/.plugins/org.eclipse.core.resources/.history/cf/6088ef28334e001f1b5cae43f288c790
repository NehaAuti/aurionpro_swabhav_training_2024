package com.aurionpro.srp.ocp.violoation.test;

import com.aurionpro.srp.ocp.violation.model.FestivalType;
import com.aurionpro.srp.ocp.violation.model.FixedDeposit;

public class FixedDepositTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		        FixedDeposit fd1 = new FixedDeposit(101, "Neha", 10000, 2, FestivalType.NEWYEAR);
		        FixedDeposit fd2 = new FixedDeposit(102, "Sayali", 15000, 1, FestivalType.DIWALI);
		        FixedDeposit fd3 = new FixedDeposit(103, "Sakshi", 20000, 3, FestivalType.HOLI);
		        FixedDeposit fd4 = new FixedDeposit(104, "Namrata", 25000, 5, FestivalType.OTHERS);

		        // Print details and calculate interest for each FixedDeposit
		        printFixedDepositDetails(fd1);
		        printFixedDepositDetails(fd2);
		        printFixedDepositDetails(fd3);
		        printFixedDepositDetails(fd4);
		    }

		    private static void printFixedDepositDetails(FixedDeposit fd) {
		        System.out.println("Account Number: " + fd.getAccountNumber());
		        System.out.println("Name: " + fd.getName());
		        System.out.println("Principle: " + fd.getPrinciple());
		        System.out.println("Duration: " + fd.getDuration() + " years");
		        System.out.println("Festival: " + fd.getFestival());
		        System.out.println("Interest Rate: " + fd.getInterestRates() + "%");
		        System.out.println("Simple Interest: " + fd.calculateSimpleInterest());
		        System.out.println(); // Print an empty line for better readability
		    }
		}


	}

}

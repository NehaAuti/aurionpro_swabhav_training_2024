package com.aurionpro.behavioural.state.test;

import com.aurionpro.behavioural.stratergy.model.MultiplyOperation;

public class OperationStrategyTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	
		        OperationStrategy operationStrategy = new OperationStrategy(new AddOperation());
		        System.out.println("Addition of 5 and 3: " + operationStrategy.doOperation(5, 3));
		        
		        // Changing strategy to MultiplyOperation
		        operationStrategy.setOperation(new MultiplyOperation());
		        System.out.println("Multiplication of 5 and 3: " + operationStrategy.doOperation(5, 3));
		    }
		}
